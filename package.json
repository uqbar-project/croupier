{
  "name": "croupier",
  "version": "0.0.1",
  "scripts": {
    "install": "npm-run-all --sequential install:client install:server",
    "install:client": "npm install --prefix client/",
    "install:server": "npm install --prefix server/",
    "start": "npm-run-all --parallel start:client start:server",
    "start:client": "FORCE_COLOR=true npm start --prefix client/ | cat",
    "start:server": "npm start --prefix server/",
    "test": "npm-run-all --parallel test:client test:server",
    "test:client": "npm test --prefix client/",
    "test:server": "npm test --prefix server/"
  },
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
